[module/date]
interval = 5
type = internal/date
date =
date-alt = "%{T2}%{T-} %d / %m / %Y"

time = " %I:%M"
time-alt =

format-prefix = %{T4}%{T-}
format-prefix-foreground = ${color.fg}
format-prefix-background = ${color.bg}
format-underline = ${colors.empty}
format-suffix = %{T4}%{T-}
format-suffix-foreground = ${color.fg}

label = "%date% %time% "
label-foreground = ${color.bg}
label-background = ${color.fg}

